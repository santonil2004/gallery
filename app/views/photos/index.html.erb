<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @album.title %>
</p>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.caption %></td>
        <td><%= image_tag(photo.photo.large) %></td>
         <td><%= link_to 'edit' , edit_album_photo_path(@album, photo) %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
  
